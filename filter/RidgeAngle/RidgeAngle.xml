<ServerManagerConfiguration>
  <ProxyGroup name="filters">
    <SourceProxy name="RidgeAngle" class="vtkRidgeAngle" label="RidgeAngle">
    <Documentation
        long_help="Calculate and expose RidgeAngle"
        short_help="RidgeAngle">
    </Documentation>
    <InputProperty
        name="Input"
        command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources" />
          <Group name="filters" />
        </ProxyGroupDomain>
      <DataTypeDomain name="input_type">
        <DataType value="vtkPolyData" />
      </DataTypeDomain>
      <Documentation>
        This property specifies the input to the RidgeAngle filter.
      </Documentation>
    </InputProperty>
  
    </SourceProxy>

  </ProxyGroup>
  <!-- End Filters Group -->
</ServerManagerConfiguration>
