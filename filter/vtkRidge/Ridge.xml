<ServerManagerConfiguration>
  <ProxyGroup name="filters">
    <!-- ================================================================== -->
    <SourceProxy name="RidgeSurfaces" class="vtkRidge" label="RidgeSurfaceGenerator">
      <Documentation
         long_help="Ridge plugin calculates height ridges on scalar data and outputs them as isosurfaces"
         short_help="Height ridge isosurfaces">
      </Documentation>

      <InputProperty
         name="Input"
         command="SetInputConnection">
         <!-- clean_command="RemoveAllInputs"> -->
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkImageData"/>
        </DataTypeDomain>
        <InputArrayDomain attribute_type="point"
                          name="input_scalars"
                          number_of_components="1" />
        <InputArrayDomain attribute_type="point"
                          name="input_vectors"
                          number_of_components="3"
                          optional="1" />
        <InputArrayDomain attribute_type="point"
                          name="input_tensors"
                          number_of_components="9"
                          optional="1" />
        <InputArrayDomain attribute_type="point"
                          name="input_data"
                          optional="1" />
        <Documentation>
	  Ridge plugin calculates height ridges on scalar data and outputs them as isosurfaces.
	  The parameters are used to fine tune isosurface generation.
        </Documentation>
      </InputProperty>
      <StringVectorProperty command="SetInputArrayToProcess"
                            element_types="0 0 0 0 2"
                            default_values="0"
                            label="Scalar Array"
                            name="SelectInputScalars"
                            number_of_elements="5">
        <ArrayListDomain attribute_type="Scalars"
                         input_domain_name="input_scalars" 
                         name="array_list">
          <RequiredProperties>
            <Property function="Input"
                      name="Input" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>This property lists the name of the scalar array.</Documentation>
      </StringVectorProperty>   

      <StringVectorProperty command="SetInputArrayToProcess"
                            default_values="1"
                            element_types="0 0 0 0 2"
                            label="Gradient Array"
                            name="SelectInputGradients"
                            number_of_elements="5">
        <ArrayListDomain attribute_type="Vectors"
                         input_domain_name="input_vectors" 
                         name="array_list">
          <RequiredProperties>
            <Property function="Input"
                      name="Input" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>This property lists the name of the gradient array.</Documentation>
      </StringVectorProperty>   

      <StringVectorProperty command="SetInputArrayToProcess"
                            default_values="2"
                            element_types="0 0 0 0 2"
                            label="Hessian Array"
                            name="SelectInputHessian"
                            number_of_elements="5">
        <ArrayListDomain attribute_type="Tensors"
                         input_domain_name="input_tensors" 
                         name="array_list">
          <RequiredProperties>
            <Property function="Input"
                      name="Input" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>This property lists the name of the hessian array.</Documentation>
      </StringVectorProperty>
      
      <StringVectorProperty command="SetInputArrayToProcess"
                            element_types="0 0 0 0 2"
                            default_values="3"
                            label="Data Array"
                            name="SelectInputData"
                            number_of_elements="5">
        <ArrayListDomain attribute_type="Scalars"
                         input_domain_name="input_data" 
                         name="array_list">
          <RequiredProperties>
            <Property function="Input"
                      name="Input" />
          </RequiredProperties>
        </ArrayListDomain>
        <Documentation>This property lists the name of the scalar array.</Documentation>
      </StringVectorProperty>   
      
      <IntVectorProperty name="UseInput"
                         command="SetUseInput"
                         number_of_elements="1"
                         default_values="1">
        <BooleanDomain name="bool"/>
        <Documentation>Use input gradient and hessian if checked. They are computed otherwise.</Documentation>
      </IntVectorProperty>
      <DoubleVectorProperty
          name="WaveSpeed"
          command="SetWaveSpeed"
          number_of_elements="1"
          default_values="1.0">
      </DoubleVectorProperty>

      <DoubleVectorProperty
          name="AngleThreshold"
          command="SetAngleThreshold"
          number_of_elements="1"
          default_values="5.0">
                <DoubleRangeDomain name="range" min="0.0" max="90.0" />
      </DoubleVectorProperty>

      <DoubleVectorProperty
	  name="MinDataValue"
	  command="SetMinDataValue"
	  number_of_elements="1"
          default_values="-1.0">
      </DoubleVectorProperty>

      <DoubleVectorProperty
	  name="MaxDataValue"
	  command="SetMaxDataValue"
	  number_of_elements="1"
          default_values="1.0">
      </DoubleVectorProperty>

      <DoubleVectorProperty
          name="EigenValueThreshold"
          command="SetEigenValueThreshold"
          number_of_elements="1"
          default_values="0.0">
      </DoubleVectorProperty>

      <IntVectorProperty
          name="RegionThreshold"
          command="SetRegionThreshold"
          number_of_elements="1"
          default_values="5">
          <IntRangeDomain name="range" min="0" max="10000" />
      </IntVectorProperty>

      <IntVectorProperty
          name="StencilRange"
          command="SetStencilRange"
          number_of_elements="1"
          default_values="1">
          <IntRangeDomain name="range" min="2" max="200" />
      </IntVectorProperty>

      <IntVectorProperty name="ComputeValley"
                         command="SetValley"
                         number_of_elements="1"
                         default_values="0">
        <BooleanDomain name="bool"/>
      </IntVectorProperty>

      <IntVectorProperty name="Manifold"
                         command="SetManifold"
                         number_of_elements="1"
                         default_values="1">
        <BooleanDomain name="bool"/>
      </IntVectorProperty>

      <OutputPort name="Ridge Surface" index="0" id="port0" />
      <OutputPort name="EigenvaluesOfHessian" index="1" id="port1"/>

    </SourceProxy>
    <!-- End Ridge -->
  </ProxyGroup>
  <!-- End Filters Group -->
</ServerManagerConfiguration>
