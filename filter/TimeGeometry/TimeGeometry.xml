<ServerManagerConfiguration>
  <ProxyGroup name="filters">
    <!-- ================================================================== -->
    <SourceProxy name="TimeGeometry" class="vtkTimeGeometry" label="TimeGeometry">
      <Documentation
         long_help="Grow ridge by compare with reference ridge"
         short_help="Grow temporal ridge isosurfaces">
      </Documentation>

      <InputProperty name="Input"
                     command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type1">
          <DataType value="vtkPolyData"/>
        </DataTypeDomain>
        <Documentation>
        Input data
        </Documentation>
      </InputProperty>

      <IntVectorProperty name="ResetOnTimestep"
                         number_of_elements="1"
                         command="SetResetOnTimestep"
                         default_values="0" >
      </IntVectorProperty>
      
    </SourceProxy>
    <!-- End Ridge -->
  </ProxyGroup>
  <!-- End Filters Group -->
</ServerManagerConfiguration>
