<ServerManagerConfiguration>
  <ProxyGroup name="filters">
    <SourceProxy name="PeriStress" class="PeriStress" label="PeriStress">
      <Documentation
          long_help="Calculate Stress of connected Atoms in Peridynamic datasets"
          short_help="PeriStress">
      </Documentation>
      <InputProperty
          name="Input"
          command="SetInputConnection">
          <ProxyGroupDomain name="groups">
            <Group name="sources" />
            <Group name="filters" />
          </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkPolyData" />
        </DataTypeDomain>
        <Documentation>
          This property specifies the input to the filter.
        </Documentation>
      </InputProperty>
                           
    </SourceProxy>

  </ProxyGroup>
  <!-- End Filters Group -->
</ServerManagerConfiguration>
